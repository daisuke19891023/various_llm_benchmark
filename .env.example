# === OpenAI ===
# OpenAI APIキー (必須)
OPENAI_API_KEY=your-openai-api-key
# OpenAI標準モデル (デフォルト: gpt-5.1)
OPENAI_MODEL=gpt-5.1
# OpenAI軽量モデル (デフォルト: gpt-5.1-mini)
OPENAI_LIGHT_MODEL=gpt-5.1-mini
# OpenAI埋め込みモデル (デフォルト: text-embedding-3-large)
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
# OpenAI埋め込み軽量モデル (デフォルト: text-embedding-3-small)
OPENAI_EMBEDDING_MODEL_LIGHT=text-embedding-3-small

# === Anthropic ===
# Anthropic APIキー (必須)
ANTHROPIC_API_KEY=your-anthropic-api-key
# Anthropic標準モデル (デフォルト: claude-4.5-sonnet)
ANTHROPIC_MODEL=claude-4.5-sonnet
# Anthropic軽量モデル (デフォルト: claude-haiku-4-5)
ANTHROPIC_LIGHT_MODEL=claude-haiku-4-5

# === Gemini ===
# Gemini APIキー (必須)
GEMINI_API_KEY=your-gemini-api-key
# Gemini標準モデル (デフォルト: gemini-3-pro-preview)
GEMINI_MODEL=gemini-3-pro-preview
# Gemini軽量モデル (デフォルト: gemini-2.5-flash)
GEMINI_LIGHT_MODEL=gemini-2.5-flash
# reasoning出力の深さ (未指定ならAPIデフォルト)
GEMINI_THINKING_LEVEL=
# Gemini (Google) 埋め込みモデル (デフォルト: text-embedding-004)
GOOGLE_EMBEDDING_MODEL=text-embedding-004

# === Pydantic AI ===
# Pydantic AI APIキー (オプション。未指定時はOPENAI_API_KEYを利用)
PYDANTIC_AI_API_KEY=
# Pydantic AI標準モデル (デフォルト: gpt-5.1)
PYDANTIC_AI_MODEL=gpt-5.1
# Pydantic AI軽量モデル (デフォルト: gpt-5.1-mini)
PYDANTIC_AI_LIGHT_MODEL=gpt-5.1-mini

# === Voyage AI ===
# Voyage AI APIキー (埋め込み利用時必須)
VOYAGE_API_KEY=your-voyage-api-key
# Voyage AI埋め込みモデル (デフォルト: voyage-3)
VOYAGE_EMBEDDING_MODEL=voyage-3

# === Logging ===
# 出力先 (stdout/file/both)
LOG_DESTINATION=stdout
# ログレベル (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO
# ファイル出力時のパス
LOG_FILE_PATH=logs/app.log
# 関数名や行番号を含めた詳細ログを有効化するか
LOG_VERBOSE=false
# プロンプト/レスポンスなど機密な本文をフルで記録する場合のみtrueにする
ALLOW_SENSITIVE_LOGGING=false

# === DsPy (OpenAIベース) ===
# DsPyで利用するOpenAIモデル (デフォルト: gpt-5.1)
DSPY_MODEL=gpt-5.1
# DsPyの軽量モデル (デフォルト: gpt-5.1-mini)
DSPY_LIGHT_MODEL=gpt-5.1-mini

# === 共通推論設定 ===
# デフォルト温度 (デフォルト: 0.7)
DEFAULT_TEMPERATURE=0.7

# === Retriever (PostgreSQL + pgvector + PGroonga) ===
# 接続文字列 (retriever利用時必須。例: docker compose利用時のローカル: postgresql://postgres:postgres@localhost:5432/various_llm_benchmark)
POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5432/various_llm_benchmark
# 利用するスキーマ名 (デフォルト: public)
POSTGRES_SCHEMA=public
# pgvectorで利用するテーブル名 (デフォルト例: pgvector_items)
PGVECTOR_TABLE_NAME=pgvector_items
# PGroongaで利用するテーブル名 (デフォルト例: pgroonga_items)
PGROONGA_TABLE_NAME=pgroonga_items
# pgvector拡張を有効化する場合はtrue (デフォルト: false)
ENABLE_PGVECTOR=false
# PGroonga拡張を有効化する場合はtrue (デフォルト: false)
ENABLE_PGROONGA=false
# 上位何件まで取得するか (デフォルト: 5)
SEARCH_TOP_K=5
# 受け付けるスコア閾値 (デフォルト: 0.0)
SEARCH_SCORE_THRESHOLD=0.0

# === Docker Compose用PostgreSQL設定 (任意) ===
# docker composeで上書き可能なPostgreSQLユーザー/DB名/パスワード
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=various_llm_benchmark
